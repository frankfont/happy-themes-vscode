{
  "name": "Happy TerminalO",
  "type": "dark",
  "colors": {
    "titleBar.activeBackground": "#23272A",         // charcoal
    "titleBar.activeForeground": "#FFA500",         // cheerful orange
    "titleBar.inactiveBackground": "#2C2F33",       // lighter charcoal
    "titleBar.inactiveForeground": "#FFA500",
    "activityBar.background": "#23272A",
    "activityBar.foreground": "#FFA500",
    "sideBar.background": "#181A1B",                // almost black
    "sideBar.foreground": "#FFA500",
    "editor.background": "#101112",                 // almost black
    "editor.foreground": "#FFA500",                 // cheerful orange
    "statusBar.background": "#23272A",
    "statusBar.foreground": "#FFA500",
    "button.background": "#23272A",
    "button.foreground": "#FFA500",
    "input.background": "#181A1B",
    "input.foreground": "#FFA500",
    "input.placeholderForeground": "#FFD580"
  },
  "tokenColors": [
    {
      "scope": ["comment"],
      "settings": {
        "foreground": "#FFD580",                    // soft orange for comments
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["string"],
      "settings": {
        "foreground": "#FFA500"                     // cheerful orange for strings
      }
    },
    {
      "scope": ["keyword"],
      "settings": {
        "foreground": "#FF8C00",                    // deeper orange for keywords
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["variable", "constant"],
      "settings": {
        "foreground": "#FFA500"
      }
    },
    {
      "scope": ["function", "entity.name.function"],
      "settings": {
        "foreground": "#FF8C00",
        "fontStyle": "bold"
      }
    }
  ]
}