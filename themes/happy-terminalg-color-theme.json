{
  "name": "Happy TerminalG",
  "type": "dark",
  "colors": {
    "titleBar.activeBackground": "#23272A",         // charcoal
    "titleBar.activeForeground": "#39FF14",         // bright green
    "titleBar.inactiveBackground": "#2C2F33",       // lighter charcoal
    "titleBar.inactiveForeground": "#39FF14",
    "activityBar.background": "#23272A",
    "activityBar.foreground": "#39FF14",
    "sideBar.background": "#181A1B",                // almost black
    "sideBar.foreground": "#39FF14",
    "editor.background": "#101112",                 // almost black
    "editor.foreground": "#39FF14",                 // cheerful green
    "statusBar.background": "#23272A",
    "statusBar.foreground": "#39FF14",
    "button.background": "#23272A",
    "button.foreground": "#39FF14",
    "input.background": "#181A1B",
    "input.foreground": "#39FF14",
    "input.placeholderForeground": "#A0FFA0"
  },
  "tokenColors": [
    {
      "scope": ["comment"],
      "settings": {
        "foreground": "#A0FFA0",                    // soft green for comments
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["string"],
      "settings": {
        "foreground": "#39FF14"                     // bright green for strings
      }
    },
    {
      "scope": ["keyword"],
      "settings": {
        "foreground": "#00FF00",                    // neon green for keywords
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["variable", "constant"],
      "settings": {
        "foreground": "#39FF14"
      }
    },
    {
      "scope": ["function", "entity.name.function"],
      "settings": {
        "foreground": "#00FF00",
        "fontStyle": "bold"
      }
    }
  ]
}