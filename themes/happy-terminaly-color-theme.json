{
  "name": "Happy TerminalY",
  "type": "dark",
  "colors": {
    "titleBar.activeBackground": "#23272A",         // charcoal
    "titleBar.activeForeground": "#FFFF00",         // bright yellow
    "titleBar.inactiveBackground": "#2C2F33",       // lighter charcoal
    "titleBar.inactiveForeground": "#FFFF00",
    "activityBar.background": "#23272A",
    "activityBar.foreground": "#FFFF00",
    "sideBar.background": "#181A1B",                // almost black
    "sideBar.foreground": "#FFFF00",
    "editor.background": "#101112",                 // almost black
    "editor.foreground": "#FFFF00",                 // cheerful yellow
    "statusBar.background": "#23272A",
    "statusBar.foreground": "#FFFF00",
    "button.background": "#23272A",
    "button.foreground": "#FFFF00",
    "input.background": "#181A1B",
    "input.foreground": "#FFFF00",
    "input.placeholderForeground": "#FFFF80"
  },
  "tokenColors": [
    {
      "scope": ["comment"],
      "settings": {
        "foreground": "#FFFF80",                    // soft yellow for comments
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["string"],
      "settings": {
        "foreground": "#FFFF00"                     // bright yellow for strings
      }
    },
    {
      "scope": ["keyword"],
      "settings": {
        "foreground": "#FFD700",                    // gold yellow for keywords
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["variable", "constant"],
      "settings": {
        "foreground": "#FFFF00"
      }
    },
    {
      "scope": ["function", "entity.name.function"],
      "settings": {
        "foreground": "#FFD700",
        "fontStyle": "bold"
      }
    }
  ]
}
